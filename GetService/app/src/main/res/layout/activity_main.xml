<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/back12">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="আপনার শহরটি নির্বাচন করুন:"
        android:layout_margin="5dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/Rajshahi"
        android:layout_width="match_parent"
        android:text="রাজশাহী"
        android:textSize="25sp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/Rangpur"
        android:layout_width="match_parent"
        android:text="রংপুর"
        android:textSize="25sp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/Dhaka"
        android:layout_width="match_parent"
        android:text="ঢাকা"
        android:textSize="25sp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/Sylhet"
        android:layout_width="match_parent"
        android:text="সিলেট"
        android:textSize="25sp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/Barishal"
        android:layout_width="match_parent"
        android:text="বরিশাল"
        android:textSize="25sp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/Khulna"
        android:layout_width="match_parent"
        android:text="খুলনা"
        android:textSize="25sp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/Chottogram"
        android:layout_width="match_parent"
        android:text="চট্টগ্রাম"
        android:textSize="25sp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/Mymensingh"
        android:layout_width="match_parent"
        android:text="ময়মনসিংহ"
        android:textSize="25sp"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:background="#33cc33"
        android:layout_marginTop="120dp"
        android:text="আমাদের সেবায় আপনাকে স্বাগতম"
        android:textColor="#6600ff"
        android:textSize="25sp"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>